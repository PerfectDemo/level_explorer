{
    "compilerOptions": {
        "module": "commonjs",
        "lib": [
            "es7",
            "dom"
        ],
        "target": "es5",
        "sourceMap": true,
        "strictNullChecks": true,
        "noImplicitAny": true,
        "strict": true,
        "noUnusedLocals": true,
        "outDir": "./backend-dist/",
        "experimentalDecorators": true,
        "allowJs": true

    },
    "exclude": [
        "node_modules"
    ],
    "include": [
        "./backend/*.ts",
        "./common/*.ts"
    ]
}